<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_field1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:background="@color/colorDark"
        android:hint="Result"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onNumberClick"
            android:text="очистка"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onOperationClick"
            android:text="*"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onNumberClick"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onNumberClick"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onNumberClick"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/moduloDivision"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onOperationClick"
            android:text="/"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onOperationClick"
            android:text="+"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onNumberClick"
            android:text="."
            android:textSize="30sp" />


        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onNumberClick"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onOperationClick"
            android:text="="
            android:textSize="30sp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onOperationClick"
            android:text="-"
            android:textSize="30sp" />

    </LinearLayout>



    <Button
        android:id="@+id/Сохранить"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Сохранить"
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="Save"
        android:background="@color/colorPrimary"
        />



</LinearLayout>







